{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++.exe - 生成和调试活动文件",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            // ↓↓↓↓ 关键是修改这一行 ↓↓↓↓
            "externalConsole": true, 
            // ↑↑↑↑ 将 false 改为 true ↑↑↑↑
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\Users\\HMHWQ\\Documents\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // 这里关联你刚才提供的 tasks.json 中的 label
            "preLaunchTask": "C/C++: g++.exe 生成活动文件"
        }
    ]
}